# =============================================
# LeaveAI Backend - Environment Configuration
# =============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# Application Settings
APP_NAME=LeaveAI
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database Configuration (MySQL)
DATABASE_URL=mysql+pymysql://root:@localhost:3306/leave_management_db

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=LeaveAI System

# AI Thresholds
AI_MIN_CONFIDENCE_TO_APPROVE=75
AI_MIN_CONFIDENCE_TO_REJECT=25
AI_TIMEOUT_MS=30000
AI_FALLBACK_MODE=MANUAL_REVIEW

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
